---
import BaseHead from "../components/BaseHead.astro";
import Firebase from "../components/Firebase.astro";

export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
}

const { title, description, image, keywords } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      keywords={keywords}
      image={image}
    />
  </head>

  <body>
    <slot />
    <Firebase />
  </body>
</html>

<style>
  body {
    height: 100vh;
  }
</style>