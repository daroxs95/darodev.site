---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Firebase from "../components/Firebase.astro";
import Bg from "../components/Bg.astro";
import CornerMenu from "../components/CornerMenu.astro";

export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
}

const { title, description, image, keywords } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      keywords={keywords}
      image={image}
    />
  </head>

  <body>
    <!-- <Bg /> -->
    <CornerMenu />
    <Navbar />
    <slot />
    <Footer />
    <Firebase />
  </body>
</html>
