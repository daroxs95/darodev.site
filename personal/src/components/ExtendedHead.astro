---
// DECSS usage
import "../../decss/utils/all_styles.mjs";
import "../../decss/utils/all_classes.mjs";
import "../styles/vars.css";
import "../styles/global.css";
import "../styles/code.css";
import "../styles/typography.css";
import "../styles/components/anchor.css";
import "../styles/components/button.css";

import AnimationsLoader from "./AnimationsLoader.astro";
import Head from "./Head.astro";

export interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
}

const { title, description, image = "/mystack.png", keywords } = Astro.props;
---

<Head
  title={title}
  description={description}
  image={image}
  keywords={keywords}
/>

<!-- ICONS -->
<script src="https://kit.fontawesome.com/d784733171.js" crossorigin="anonymous"
></script>
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
/>

<style>
  .material-symbols-outlined {
    font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 48;
  }
</style>

<AnimationsLoader />
