<style>
  .two-columns {
    gap: var(--v-gap);
    max-width: var(--max-width);
    margin: var(--v-gap) auto;
    display: grid;
    grid-template-columns: 1fr;
    row-gap: calc(var(--v-gap) * 4);
    @media (width >= 768px) {
      column-gap: var(--h-gap);
      grid-template-columns: 1fr 1fr;
      margin: calc(var(--v-gap) * 4) auto;
    }
  }

  .about-content-wrapper {
    margin: var(--v-gap) auto;
  }

  .profile-pic {
    grid-row: 1;
    @media (width >= 768px) {
      grid-column: 2;
    }
  }

  img {
    filter: grayscale(100%);
    object-fit: cover;
    object-position: top;
    width: 100%;
    max-height: 485px;
    box-shadow: black 0 calc(var(--h-gap) / 4);
    @media (width >= 768px) {
      box-shadow: black calc(1 * var(--h-gap) / 4) calc(var(--h-gap) / 4);
    }
  }

  .my-stack-section {
    background-color: var(--color-bg-dark) !important;
    color: var(--color-bg-light);
    padding: calc(var(--h-gap) * 4) 0;
  }

  .my-stack-section h3 {
    text-align: center;
  }
</style>
